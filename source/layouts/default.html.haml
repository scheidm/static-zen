!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title 
      =data['title']
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %meta{:content => "#{data['description']['default']}", :name => "description"}/
    %meta{:content => "#{data['author']['name'] }}", :name => "author"}/
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    / Stylesheets
    %link{:href => "http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", :rel => "stylesheet"}/
    <!-- Le fav and touch icons -->
    <!-- Update these with your own images -->
    <link rel="shortcut icon" href="images/favicon.ico">
    <link rel="apple-touch-icon" href="images/apple-touch-icon.png">
    <link rel="apple-touch-icon" sizes="72x72" href="images/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="images/apple-touch-icon-114x114.png">
    <script language="javascript", src="//code.jquery.com/jquery-1.10.2.min.js", type="text/javascript"></script>
    -for stylesheet in data['stylesheets']
      <link rel="stylesheet" href="/assets/stylesheets/#{stylesheet['name']}">
    -for scripts in data['javascripts']
      <script language="javascript", src="/assets/javascripts/#{scripts['name']}", type="text/javascript"></script>
  %body
    %nav#main-nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation", :style => "height:70px"}
      .container.container-xs-height
        .navbar-header
          .navbar-brand
            %a{:href => "."} 
              =data['title']
            %span.btn-group.hidden-lg.hidden-md.hidden-sm
              %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :style => "background-color: #{data['button_color']}", :type => "button"}
                %i.fa.fa-bars{:style => "margins:5px"}
              %ul.dropdown-menu{:role => "menu"}
                :plain
                  {{# data.navigation?to__root }}
                    {{> pages_list_custom }}
                  {{/ data.navigation?to__root }}
                  {{#data.custom_navigation}}
                    <li> <a href="{{url}}">{{text}}</a> </li>
                  {{/data.custom_navigation}}
        .navbar-right
          %ul.nav.navbar-nav.hidden-xs
            :plain
              {{# data.navigation?to__root }}
                {{> pages_list_custom }}
              {{/ data.navigation?to__root }}
              {{#data.custom_navigation}}
                <li><a href="{{url}}">{{text}}</a></li>
              {{/data.custom_navigation}}
    {{{ content }}}
    .footer
      .container
        %p
          Â© 2015
          = succeed "," do
            %a{:href => "mailto:{{data.author.email}}"} {{ data.author.name }}
          %a{:href => "{{url}}", :target => "_blank", :title => "{{title}}"} {{text}}
          {{/data.footer_links}}
    {{{ widgets.google_prettify }}}
    {{{ widgets.analytics }}}
    / Activate Bootstrap Tooltips and Popovers
    :javascript
      jQuery(document).ready(function() {
          jQuery("time.timeago").timeago();
        });
        $("#rcode").click(function () {
            this.select();
        });
